@page "/"
@using Microsoft.AspNetCore.Components.Web

<div class="hero-section">
    <div class="main-card">
        <h1 class="animated-title">
            @foreach (var letter in titleLetters)
            {
                if (letter.character == ' ')
                {
                    <span class="letter space" style="animation-delay: @(letter.delay)ms">&nbsp;</span>
                }
                else
                {
                    <span class="letter" style="animation-delay: @(letter.delay)ms">@letter.character</span>
                }
            }
        </h1>

        <div class="navigation-boxes">
            <a href="/festivals" class="nav-box">
                <i class="fas fa-calendar-alt mb-2"></i>
                <h4>Festivals</h4>
                <p>Book a ticket now</p>
            </a>
            <a href="/artists" class="nav-box">
                <i class="fas fa-ticket-alt mb-2"></i>
                <h4>Artists</h4>
                <p>Discover our lineup</p>
            </a>
        </div>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        height: 100%;
        overflow: hidden;
        margin: 0;
        padding: 0;
    }

    .hero-section {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), url('https://wallpapers.com/images/high/music-festival-6000-x-4000-wallpaper-8n0a56wtyd3dcld8.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }

    .main-card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 3rem;
        text-align: center;
        max-width: 600px;
        width: 90%;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        transform: translateY(20px);
        opacity: 0;
        animation: slideUp 1s ease-out 0.5s forwards;
    }

    @@keyframes slideUp {
        to

    {
        transform: translateY(0);
        opacity: 1;
    }

    }

    .animated-title {
        font-size: 3.5rem;
        font-weight: bold;
        color: #fff;
        margin-bottom: 2rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        font-family: 'Arial', sans-serif;
    }

    .letter {
        display: inline-block;
        opacity: 0;
        transform: translateY(-100px);
        animation: letterDrop 1s ease-out forwards, letterLoop 5s ease-in-out infinite;
    }

        .letter.space {
            width: 0.3em;
        }

    @@keyframes letterDrop {
        to

    {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes letterLoop {
        0%, 90%

    {
        opacity: 1;
        transform: translateY(0);
    }

    95% {
        opacity: 0;
        transform: translateY(-100px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .navigation-boxes {
        display: flex;
        gap: 2rem;
        justify-content: center;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

    .nav-box {
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 15px;
        padding: 2rem 1.5rem;
        color: white;
        text-decoration: none;
        transition: all 0.35s ease;
        width: 200px;
        backdrop-filter: blur(10px);
        position: relative;
        overflow: hidden;
        display: block;
    }

        .nav-box::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s ease;
        }

        .nav-box:hover::before {
            left: 100%;
        }

        .nav-box:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.4);
            border-color: rgba(255, 255, 255, 0.5);
            background: rgba(255, 255, 255, 0.2);
            color: white;
            text-decoration: none;
        }


        .nav-box h4 {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .nav-box p {
            font-size: 1rem;
            opacity: 0.9;
            margin: 0;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .animated-title

    {
        font-size: 2.5rem;
    }

    .main-card {
        padding: 2rem;
    }

    .navigation-boxes {
        flex-direction: column;
        align-items: center;
    }

    .nav-box {
        width: 250px;
    }

    }

    @@media (max-width: 480px) {
        .animated-title

    {
        font-size: 2rem;
    }

    .main-card {
        padding: 1.5rem;
    }

    }
</style>

@code {
    private List<(char character, int delay)> titleLetters = new();

    protected override void OnInitialized()
    {
        string title = "It's Showtime!";
        titleLetters = title.Select((c, i) => (c, i * 100)).ToList();
    }
}